---
import Layout from '../layouts/Layout.astro';
import { CVContainer } from '../components/cv/CVContainer';
import cvData from '../data/cv-content.json';

// Importante: client:load es necesario porque CVContainer usa estado de React y Framer Motion
---

<Layout title={`CV - ${cvData.profile.name}`}>
  <CVContainer client:load initialData={cvData} />
</Layout>

<style is:global>
  /* Fix para impresi√≥n */
  @media print {
    body {
      background: white !important;
    }
    /* Ocultamos la barra de herramientas al imprimir */
    button,
    .fixed {
      display: none !important;
    }
    /* Reseteamos transformaciones 3D para que salga plano en papel */
    .transform-none-print {
      transform: none !important;
    }
  }
</style>
